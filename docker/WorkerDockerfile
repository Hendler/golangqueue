FROM golang:1.21-alpine

WORKDIR /app

RUN mkdir worker
# Copy go mod and sum files
COPY go.mod go.sum ./

# Download all dependencies
RUN go mod download
COPY ./worker/main.go ./worker/main.go 

# Build the consumer with a distinct name
RUN go build -o worker-binary ./worker/main.go  # Use a different name than the directory

# Run the binary
CMD ["./worker-binary"]